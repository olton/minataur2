include mixins/_peers-table

html(lang="en").light-theme.scrollbar-type-1.sb-darkViolet
    head
        meta(charset="utf-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no")
        link(rel='stylesheet', href='https://cdn.metroui.org.ua/v4-dev/css/metro-all.min.css')
        link(rel='stylesheet', href='/css/index.css')
        link(rel='stylesheet', href='https://unpkg.com/leaflet@1.9.4/dist/leaflet.css' integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY=" crossorigin="")

        //include favicon

        title= title

    body.m4-cloak
        include partials/_appbar

        section.container-fluid
            div.container
                div.row
                    div.cell-md-12
                        div.d-flex.flex-nowrap.flex-align-center.pt-4.w-100
                            div
                                span.h1 Network Peers
                            div.ml-auto.d-flex.border.bd-default
                                div.ml-auto.p-1.text-center
                                    span.ml-1.text-muted.reduce-4.text-bold OPEN
                                    div
                                        span.fg-green.ml-1.text-bold(style="font-size: 24px; line-height: 1")#active-peers 0
                                div.border-left.bd-default.p-1.text-center
                                    span.ml-1.text-muted.reduce-4.text-bold TOTAL
                                    div
                                        span.ml-1.text-bold(style="font-size: 24px; line-height: 1")#found-peers 0


        section.container-fluid
            div.container
                div.mb-4#map(style="height: 400px;")

        section.container-fluid
            div.container
                div.row
                    div.cell-md-7
                        input#peers-search(
                            data-role="input"
                            data-prepend="Search: "
                            placeholder="Enter peer hash or ip address"
                            data-search-button="false"
                        )
                    div.cell-md-2
                    div.cell-md-3
                        span.ml-1.text-muted.reduce-4.text-bold LIST SORT BY
                        div.mt-1-minus
                            input#peers-sort-by-country(type="radio" name="peers-sort" value="country" data-cls-check="bg-green no-border" data-role="radio" data-caption="<span>Country</span>")
                            input#peers-sort-by-isp(type="radio" name="peers-sort" value="isp" checked data-cls-check="bg-red no-border" data-role="radio" data-caption="<span>ISP</span>")

                +peers-table("peers-table")

        include partials/_footer

        include partials/_scripts

        script(src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js" integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo=" crossorigin="")

        script
            include js/peers/wsc.js
            include js/peers/index.js
            include js/peers/map.js


